---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Protest+Strike&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>

	<style is:global>
		body{
			background-image: url(src/img/fondoo.png);
			background-size: cover;
		}

		.barra{
			font-family:'Courier New', Courier, monospace;
			transition: transform 0.05s ease;
		}

		.barra:hover{
			transform: scale(1.01);
		}

        nav {
            background-color: #333;
            padding: 15px;
            text-align: center;
			transition: transform 0.10s ease;
        }

        nav a {
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            margin: 0 10px;
            font-size: 16px;
        }

		.txt-1{
			text-align: center;
		}

		.hola{
			font-size: 110px;
			font-family: 'Protest Strike', sans-serif;
		}

		.mucho-gusto{
			font-size: 90px;
			font-family:'Courier New', Courier, monospace;
			margin-top: -65px;
			word-spacing: -25px;
			letter-spacing: -5px;
		}

		.nombre{
			font-size: 90px;
			font-family:'Courier New', Courier, monospace;
			margin-top: -65px;
			word-spacing: -25px;
			letter-spacing: -5px;
		}

		.developer{
			font-size: 35px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: -35px;
		}
		
		.parrafo1{
			font-family:'Courier New', Courier, monospace;
			font-weight: bold;
			letter-spacing: -0.5px;
		}

		.foto1{
			width: 15%;
			border-radius: 50%;
		}

		.lenguajes1{
			display: flex;
			justify-content: center;
		}

		.leng{
			transition: transform 0.2s ease;
			margin-top: 25px;
			width: 35px;
			margin-right: 12px;
			margin-bottom: 40px;
		}

		.leng:hover{
			transform: scale(1.1);
		}

		.txt2{
			display: flex;
			text-align: center;
			margin-left: 20px;
		}

		.columna{
			flex: 1;
			padding: 50px;
			display: flex;
		}

		.foto2{
			width: 70%;
			height: 45%;
			padding-right: 50px;
			margin-top: 90px;
		}

		.soy-david{
			font-size: 40px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: -15px;
		}

		.developer2{
			font-size: 16px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: -17px;
		}

		.parrafo2{
			font-size: 13.5px;
			font-family:'Courier New', Courier, monospace;
			font-weight: bold;
			letter-spacing: -0.5px;
			text-align: justify;
		}

		.datos{
			font-size: 40px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: -15px;
		}

		#icono{
			font-size: 25px;
		}

		.datosper{
			text-align: justify;
			font-size: 15px;
			font-family:'Courier New', Courier, monospace;
			font-weight: bold;
			letter-spacing: -0.5px;
		}

		.dyp{
			margin-left: 50px;
		}

		.contactame{
			font-size: 25px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: 45px;
		}

		#wsp{
			font-size: 25px;
			color: rgb(1, 82, 1);
		}

		.bi bi-whatsapp{
			transition: transform 0.2s ease;
		}

		.bi bi-whatsapp{
			transform: scale(1.1);
		}

		.txt4{
			text-align: center;
		}

		.mis-skills{
			font-size: 50px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: 30px;
			
		}

		.parrafo-skills{
			font-size: 15px;
			font-family:'Courier New', Courier, monospace;
			font-weight: bold;
			letter-spacing: -0.5px;
		}

		.skills-lenguajes{
			display: flex;
			align-items: center;
		}

		.txt-leng{
			font-size: 20px;
			font-family: 'Protest Strike', sans-serif;
			margin-left: 40%;
		}

		.lenguajess{
			transition: transform 0.3s ease;
			width: 35px;
			margin-right: 5px;
		}

		.lenguajess:hover{
			transform: scale(1.2);
		}

		.proyectos{
			font-size: 50px;
			font-family: 'Protest Strike', sans-serif;
			margin-top: 30px;
		}

		.pry-api{
			width: 30%;
			height: auto;
			transition: transform 0.3s ease;
		}

		.pry-api:hover{
			transform: scale(1.03);
		}

		.proyecTOS{
			margin-top: 25px;
		}

		.txt3{
			text-align: center;
		}

		.t1{
			font-size: 20px;
			font-family: 'Protest Strike', sans-serif;
			margin-bottom: -20px;
		}

		.t2{
			font-size: 15px;
			font-family:'Courier New', Courier, monospace;
			font-weight: bold;
			letter-spacing: -0.5px;
		}
		
		@media screen and (max-width: 600px) {

			nav a {
                padding: 5px;
                font-size: 10px;	
            }
        }

		@media screen and (min-width: 412px) and (max-width: 932px){
			
			nav a {
                padding: 5px;
                font-size: 14px;	
            }
        }

        @media screen and (min-width: 768px) and (max-width: 1024px) {

			nav a {
                padding: 5px;
                font-size: 25px;	
            }
        }

		@media screen and (min-width: 1025px){
			nav a {
                padding: 25px;
                font-size: 18px;	
            }
		}
    </style>
</html>
